<?xml version="1.0"?>
<config>
	<sections>
		<google>
			<groups>
				<adwordsremarketingtags module="adwordsremarketingtags">
					<label>AdWords Remarketing Tag</label>
					<expanded>1</expanded>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<google_conversion_id>
							<label>Google Conversion ID</label>
							<validate>required-entry</validate>
							<frontend_type>text</frontend_type>
							<default></default>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Enter your conversion Google Conversion ID here.
							]]></comment>
						</google_conversion_id>
						<include_taxes>
							<label>Include Taxes</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<default>1</default>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Should taxes be included in the prices and totals used in the AdWords Remarketing Tag?
							]]></comment>
						</include_taxes>
						<enable_debug>
							<label>Enable Debug Mode</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<default>0</default>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Enable to output a detailled log to your <i>log</i> directory as well as to your browser's JavaScript console in the frontend.
							]]></comment>
						</enable_debug>
						<product_id>
							<label>Product ID</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adwordsremarketingtags/system_config_source_productId</source_model>
							<default>id</default>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[Choose which product property to use as identifier (only ID or SKU are currently supported).]]></comment>
						</product_id>
					</fields>
				</adwordsremarketingtags>
			</groups>
		</google>
	</sections>
</config>
